{
    "extends": "../tsconfig",
    "compilerOptions": {
        "baseUrl": "../",
        "paths": {
            "@services/*": ["src/services/*"],
            "@providers/*": ["src/providers/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@models/*": ["src/models/*"],
            "@dataMappers/*": ["src/dataMappers/*"],
            "@utils/*": ["src/utils/*"],
            "@actions/*": ["src/actions/*"],
            "@src/*": ["src/*"],
            "@tests/*": ["tests/*"],
            "@mocks/*": ["tests/mocks/*"]
        }
    },
    "include": ["./**/*"]
}
